<h2> 
  <%= t(:product_priorities) %> 
  <%= link_to "#{content_tag :em, '', :class => 'icon-plus'}
               #{t(:new_product_priority)}".html_safe, "#", :class => "modal_trigger" %>
</h2>


<%= render :partial => "/shared/app_settings_tabs" %>


<%= render  :partial => "/product_priorities/new_product_priority", 
            :locals => {:@new_product_priority => @new_product_priority} %>


<% if !@product_priorities.empty? %>
  <table class="table table-striped">
    <thead>
      <th> <%= t(:title) %> </th>
      <th> </th>
    </thead>
    <tbody>
      <% @count = 0 %>
      <% @product_priorities.each do |product_priority| %>
        <tr>
          <td> 
            <%= link_to "#{content_tag :em, '', :class => ''}
                         #{product_priority.name}".html_safe, "#", :class => "modal_trigger_2" %>
            <%= render  :partial => "/product_priorities/edit_product_priority", 
                        :locals => {:@product_priority => product_priority, :@count => @count} %>
          </td>
          <td> 
            <%= link_to t(:delete), product_priority_path(product_priority.id), :method => :delete, 
                        :confirm => t(:confirm_deletion) %>
          </td>
        </tr>  
        <% @count += 1 %>
      <% end %>
    </tbody>
  </table>
<% end %>

