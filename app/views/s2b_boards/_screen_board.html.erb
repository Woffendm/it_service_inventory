<div class="row-fluid" id="div_screen_board">
  
  
  <% board_columns.each_with_index do |board_column, index| %>
  
    <div class="board span<%= (12 / board_columns.length.to_f).ceil %>" id="column_<%= index %>">
      <p class="status">
        <%= board_column[:name] %>
      </p>
      
      <% if index == 0 && (!User.current.anonymous? && id_member.include?(User.current.id) || User.current.admin) %>
        <p class="new_issue ">
          <img src="/plugin_assets/scrum2b/images/Add.ico" title="<%= board_column[:name] %>" class="icon_new_issue icon">
        </p>
      <% end %>
      
      <div class="connectedSortable" id ="<% if !User.current.anonymous? && id_member.include?(User.current.id)|| User.current.admin%>column_content_<%= index %><% else %>column_content_<%= index %>_nomember<% end %>" value="status_no_start">
        <%= render :partial => "form_new", :locals => { :issue => issue}  if index == 0 %>
        <% board_column[:issues].each do |issue|%>
          <li id ="<%= issue.id %>">
            <%= render :partial => "board_issue", :locals => { :issue => issue} %>
          </li>
        <% end %>
      </div>
    </div>
    
  <% end %>
  
</div>