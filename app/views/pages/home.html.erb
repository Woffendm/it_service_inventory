<h2> <%= t(:home) %> </h2>


  <%= form_tag(home_search_pages_path, :method => "get", :class => "form-inline") do %>
    <span id="group_dropdown">
      <span id="group_select_div">
        <%= label_tag :group_id, t(:group), :class => "inline" %>
        <%= collection_select(:group, :id, @groups, :id, :name, 
                             {:include_blank => t(:all_groups) }) %>
      </span>
    </span>
    <span id="service_dropdown">
      <span id="service_select_div">
        <%= label_tag :service_id, t(:service), :class => "inline" %>
        <%= collection_select(:service, :id, @services, :id, :name,  
                             {:include_blank => t(:all_services) }) %>
      </span>
    </span>
    <span id="home_header_buttons">
      <%= submit_tag t(:view), :id => "search" %> 
      <%= submit_tag t(:reset), :id => "clear", :type => :button %>
    </span>
  <% end %>


<div id="no_filters" class="error hidden">
    Error: <%= t(:need_selection) %>
</div>


<% if @data_to_graph && @full_time_employees > 0 %>
<div class="chart_div_container">
  <h3> <%= @graph_title %> </h3>
  <div id="bar_graph_div" class="chart_div"></div>
  <div id="pie_chart_div" class="chart_div"></div>
</div>
<% else %>
  <br/> <br/>
  <p class="error"> 
    <%= t(:group_no_allocations_0) %>
    <br/> <br/>
    <%= t(:group_no_allocations_1) %>
    <br/>
    <%= t(:group_no_allocations_2) %>
    <br/>
    <%= t(:group_no_allocations_3) %>
  </p>
  <% if @employees %>
    <%= render  :partial => "/pages/employee_results",
                :locals => {:@employees => @employees} %>
  <% end %>
<% end %>


<% if @data_to_graph && @full_time_employees > 0 %>
  <div class="light-border">
    <form class="form-horizontal">
      <% if @group %>
        <div class="control-group">
          <span class="control-label">
            <%= label_tag t(:group) + ":" %>
          </span>
          <span class="controls">
            <%= @group.name %>
          </span>
        </div>
      <% end %>
      <% if @service %>
        <div class="control-group">
          <span class="control-label">
            <%= label_tag t(:service) + ":" %>
          </span>
          <span class="controls">
            <%= @service.name %>
          </span>
        </div>
      <% end %>
      <div class="control-group">
        <span class="control-label">
          <%= label_tag t(:full_time_employees) + ":" %>
        </span>
        <span class="controls">
          <%= @full_time_employees %>
        </span>
      </div>
      <div class="control-group">
        <span class="control-label">
          <%= label_tag t(:employee_headcount) + ":" %>
        </span>
        <span class="controls">
          <a id="toggle-employees"><%= @employee_headcount.to_s + ", " + t(:click_to_view) %> </a>
        </span>
      </div>
    </form>
    <div id="employee_results">
      <%= render  :partial => "/pages/employee_results",
                  :locals => {:@employees => @employees} %>
    </div>
  </div>
<% end %>



<script type="text/javascript">
  var servicesPathname = "<%= services_groups_path %>";
  var groupsPathname = "<%= groups_services_path %>";
  var dataTitle1 = "<%= @data_title_1 %>";
  var dataTitle2 = "<%= @data_title_2 %>";
  var show = "<%= @employee_headcount.to_s + ", " + t(:click_to_view) %>";
  var hide = "<%= @employee_headcount.to_s + ", " + t(:click_to_hide) %>";
  <% if @data_to_graph %>
    var dataToGraph = <%= raw @data_to_graph %>;
    var graphTitle = "<%= @graph_title %>";
    var xAxisTitle = "<%= @x_axis_title %>";
  <% end %>
</script>