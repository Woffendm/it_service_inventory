<div class="container-fluid filter">
  
  <span class="float_right">
    <%= button_tag l(:label_btn_submit_selected), :class => "btn btn-primary btn_submit", 
        :id => "btn_filter" %>
    
    <% if @use_version_for_sprint %>
      <%= select_tag("versions", options_from_collection_for_select(@sprints, :id, 
          :name, :selected => session[:params_version_ids]), {"data-placeholder" => "All Sprints", :class => "chosen-select", :multiple => true}) %>
    <% else %>
      <%= select_tag("custom_values", options_for_select(@sprints, 
          :selected => session[:params_custom_values]), {"data-placeholder" => "All Sprints", :class => "chosen-select", :multiple => true}) %>
    <% end %>
    
    <%= select_tag("projects", options_from_collection_for_select(@projects, :id, :name,
        :selected => session[:params_project_ids]), "data-placeholder" => "All Projects", :class => "chosen-select", :multiple => true) %>
    
    <%= select_tag("members", options_from_collection_for_select(@members, :id, :name,
        :selected => session[:params_member_ids]), "data-placeholder" => "All Members", :class => "chosen-select", :multiple => true) %>
    
    <%= select_tag "statuses", options_from_collection_for_select(@statuses, 
        :id, :name), :selected => session[:params_status_ids], "data-placeholder" => "All Statuses", :class => "chosen-select", :multiple => true %>
  </span>
    
</div>