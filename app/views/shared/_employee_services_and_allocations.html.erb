<% if employee.get_total_allocation > 0 %> 
  <div class="tooltip_trigger">
    <%= employee.get_total_allocation %> FTE
  </div>
  <div class="tooltip" hidden>
    <table>
      <thead>
        <tr>
          <th> <%= t(:service) %> </th>
          <th> <%= t(:allocation) %> </th>
        </tr>
      </thead>
      <tbody>
        <% employee.services.order(:name).each do |service| %>
          <tr class="<%= cycle('tooltip_odd', 'tooltip_even', :name => employee.full_name) %>">
            <td class="tooltip_first_column"> <%= service.name.truncate(20) %> </td>
            <td class="tooltip_last_column">
               <%=service.get_employee_allocation(employee).rounded_allocation %> 
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>