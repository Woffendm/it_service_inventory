<!DOCTYPE html>
<html>
<head>
  <title>IT Service Inventory</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
	<%= stylesheet_link_tag "redmine" %>
	<!--<%= stylesheet_link_tag @current_theme %>-->
  <%= csrf_meta_tags %>
</head>
<body class="theme-Osu highrise controller-issues action-index">
	<div id="wrapper">
		<div id="wrapper2">
			<div id="top-menu">
				<div id="account">
					<ul>
						<% if session[:current_user_id] %>
							<li> <%= link_to "Logout", logins_destroy_path %>
						<% else %>
							<li> <%= link_to "Login", logins_new_path %>
						<% end %>
					</ul>
				</div>
				<div id="loggedas">
					Logged in as:
					<%= session[:current_user_name] %>
				</div>
				<ul>
					<li><%= link_to "Home", employees_home_path %> </li>
					<li><%= link_to "Employees", employees_path %></li>
					<li><%= link_to "Groups", groups_path %></li>
					<% if can? :manage, Service %>
						<li><%= link_to "Services", services_path %></li>
					<% end %>
					<% if can? :manage, AppSetting %>
						<li><%= link_to "Settings", app_settings_path %></li>
					<% end %>
				</ul>
			</div>
			<div id="header">
				<h1> IT Service Inventory </h1>
			</div>
			<div id="main">
				<% if flash[:notice] %>
					<p class="notice">
						<%= flash[:notice] %>
					</p>
				<% end %>
				<% if flash[:error] %>
					<p class="error">
						Error:
						<br/>
						<%= flash[:error] %>
					</p>
				<% end %>
				<div id="content">
					<%= yield %>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
