
<h1> Employee Roster for <%= @group.name %> </h1>

<h2> Add Employees </h2>

<%= form_tag("add_employee", :method => "post") do %>
	<p>
		<%= label_tag :name %>
		<%= collection_select(:employee, :id, @group.get_available_employees, :id, :name) %>
		<%= submit_tag  "Add" %>
	</p>
<% end %>



<table><caption> Existing Employees </caption>
	<thead>
		<th> Employees</th>
	</thead>
	<tbody>
		<% @group.employees.each do |employee| %>
			<tr>
				<td><%= employee.name %></td>
				<td>
					<%= form_tag("remove_employee", :method => "post") do %>
						<%= hidden_field_tag(:employee, employee.id) %>
						<%= submit_tag  "Remove", :confirm => "Confirm removal." %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>


<%= link_to "Back", groups_path %>