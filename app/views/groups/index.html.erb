<h2> 
  <%= t(:groups) %> 
  <% if can? :create, Group %>
    <%= link_to "#{content_tag :em, '', :class => 'icon-plus'}
                 #{t(:new_group)}".html_safe, "#", :class => "modal_trigger" %>
  <% end %>
</h2>


<%= render  :partial => "/groups/new_group", 
            :locals => {:@group => @group} %>


<table class="table table-striped">
  <caption> <%= t(:all_groups) %> </caption>
  <thead>
    <th> <%= t(:name) %> </th>
    <th> <%= t(:total_employees) %> </th>
    <th> </th>
  </thead>
  <tbody>
    <% unless @groups.blank? %>
      <% @groups.each do |group| %>
        <tr class="<%= cycle('odd', 'even') %>">
          <td> 
            <%= link_to group.name, group_path(group.id) %>
          </td>
          <td> 
            <%= group.employees.length.to_s %>
          </td>
          <td> 
            <% if can? :destroy, Group %>
              <%= link_to t(:delete), group_path(group.id), :method => :delete, 
                          :confirm => t(:confirm_deletion) %> 
            <% end %>
          </td>
        </tr>  
      <% end %>
    <% end %>
  </tbody>
</table>