<%= render :partial => "/shared/app_settings_tabs" %>


<h3>
  <%= t(:portfolio_names) %>
  <%= render  :partial => "/portfolio_names/new_portfolio_name", 
              :locals => {:new_portfolio_name => @new_portfolio_name} %>
</h3>



<% if @portfolio_names.blank? %>
  <p>
    <%= t(:nothing_to_display) %>
  </p>
<% else %>
  <table class="table table-striped">
    <thead>
      <th> <%= t(:title) %> </th>
      <th> <%= t(:active) %> </th>
      <th> </th>
    </thead>
    <tbody>
      <% @portfolio_names.each_with_index do |portfolio_name, index| %>
        <tr>
          <td> 
            <%= render  :partial => "/portfolio_names/edit_portfolio_name", 
                        :locals => {:portfolio_name => portfolio_name, :index => index } %>
          </td>
          <td>
            <%= portfolio_name.global %>
          </td>
          <td> 
            <%= link_to t(:delete), portfolio_name_path(portfolio_name.id), :method => :delete, 
                        :confirm => t(:confirm_deletion), :class => "btn btn-danger btn-small" %>
          </td>
        </tr>  
      <% end %>
    </tbody>
  </table>
<% end %>



