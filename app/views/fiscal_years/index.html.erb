<%= render :partial => "/shared/app_settings_tabs" %>


<%= render  :partial => "/fiscal_years/new_fiscal_year", 
            :locals => {:@new_fiscal_year => @new_fiscal_year} %>



<h3>
  <%= t(:fiscal_years) %>
  <a class="modal_trigger" href="#">
    <i class="icon-plus"></i>
    <%= "#{t(:new)} #{t(:fiscal_year)}" %>
  </a>
</h3>



<% if @fiscal_years.blank? %>
  <p>
    <%= t(:nothing_to_display) %>
  </p>
<% else %>
  <table class="table table-striped">
    <thead>
      <th> <%= t(:year) %> </th>
      <th> <%= t(:active) %> </th>
    </thead>
    <tbody>
      <% @fiscal_years.each_with_index do |fiscal_year, index| %>
        <tr>
          <td> 
            <%= link_to "#{content_tag :em, '', :class => ''}
                         #{fiscal_year.year}".html_safe, "#", :class => "modal_trigger_2" %>
            <%= render  :partial => "/fiscal_years/edit_fiscal_year", 
                        :locals => {:fiscal_year => fiscal_year, :index => index} %>
          </td>
          <td>
            <%= fiscal_year.active %>
          </td>
        </tr>  
      <% end %>
    </tbody>
  </table>
<% end %>

