<div class="form-inline light-border" id="modal_content">
  <%= form_for @new_product_state do |form| %>
    <%= form.label :value, "Title" %>
    <%= form.text_field :value %>
    <%= form.hidden_field(:code, :value => @new_product_state.code) %>
    <%= form.submit  t(:create) + t(:product_state) %>
  <% end %>
</div>
