<a class="btn btn-small" data-toggle="modal" data-target="#modal_content" href="#">
  <i class="icon-plus"></i>
  <%= "#{t(:add)} #{t(:site_admin)}" %>
</a>



<div class="modal hide fade" id="modal_content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <%= t(:new) + " " + t(:site_admin) %>
  </div>
  <%= form_tag("add_admin", :method => "post") do %>
    <div class="modal-body">
      <%= collection_select(:employee, :id, @not_admins, :id, :full_name,
                           {:include_blank => "-" + t(:select) + t(:employee) + "-"},
                           {:class => "autocomplete large-select"}) %>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <%= submit_tag  t(:add), :confirm => t(:confirm_admin), :class => "btn btn-success" %>
    </div>
  <% end %>
</div>