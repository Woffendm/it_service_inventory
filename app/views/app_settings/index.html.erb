<h2> Application Settings </h2>


<%= link_to "Add Site Admin", app_settings_admins_path %>


<table class="list issues">
	<caption> All Settings </caption>
	<thead>
		<th> Setting </th>
		<th> Currently Active </th>
		<th> Options </th>
		<th> </th>
	</thead>
	<tbody>
		<% AppSetting.all.each do |setting| %>
			<%= form_for setting do |form| %>
				<tr>
					<td> <%= setting.code %> </td>
					<td> <%= setting.active.from(7) %> </td>
					<td> <%= form.select(:active, options_for_select(@themes)) %> </td>
					<td> <%= form.submit  "Save changes" %> </td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>