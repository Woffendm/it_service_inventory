<h2> <%= t(:site_admins) %> </h2>


<h3> <%= t(:add) + t(:admin) %> </h3>
<div id="my-form">
  <%= form_tag( "add_admin", :method => "post") do %>
    <p>
      <%= label_tag t(:name) %>
      <%= collection_select(:employee, :id, Employee.where(:site_admin => nil).order(:name_last), :id, :full_name) %>
      <%= submit_tag  t(:add), :confirm => t(:confirm_admin) %>
    </p>
  <% end %>
</div>


<table class="list issues">
  <caption> <%= t(:existing_administrators) %> </caption>
  <thead>
    <th> <%= t(:name) %> </th>
    <th> </th>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td> <%= admin.full_name %> </td>
      </tr>
    <% end %>
  </tbody>
</table>