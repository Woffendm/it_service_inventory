<%= render :partial => "/shared/app_settings_tabs" %>



<h3>
  <%= t(:existing_administrators) %>
  <%= render :partial => "/app_settings/new_site_admin" unless @not_admins.empty?%>
</h3>



<% if @admins.blank? %>
  <%= render  :partial => "/shared/nothing_to_display" %>
<% else %>
  <table class="table table-striped">
    <thead>
      <th> <%= t(:name) %> </th>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td> <%= admin.full_name %> </td>
          <td>
            <% if admin != @current_user %>
              <%= render  :partial => "/shared/remove_button", 
                          :locals  => {:path => remove_admin_app_settings_path +
                          "?employee=#{admin.id}"} %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>