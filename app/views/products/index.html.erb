<h2> 
  <%= t(:products) %> 
  <% if can? :create, Product %>
    <%= link_to "#{content_tag :em, '', :class => 'icon-plus'}
                 #{t(:new_product)}".html_safe, "#", :class => "modal_trigger" %>
  <% end %>
</h2>


<%= render  :partial => "/products/new_product", 
            :locals => {:@product => @product, :@groups => @groups} %>


<fieldset class="light-border">
  <legend> <%= t(:filter_results) %> </legend>
  <%= form_tag(products_path, :method => "get", :class => "form-inline") do %>
    <%= text_field_tag "search[product_name]", @product_name, :placeholder => "All Product Names" %>
    <%= collection_select(:search, :group, @groups, :id, :name, 
                         {:include_blank => "-" + t(:all_groups) + "-",
                          :selected => @group}) %>
    <%= collection_select(:search, :product_state, @product_states, :id, :name, 
                         {:include_blank => "-" + t(:all_product_states) + "-",
                          :selected => @product_state}) %>
    <%= collection_select(:search, :product_type, @product_types, :id, :name, 
                         {:include_blank => "-" + t(:all_product_types) + "-",
                          :selected => @product_type}) %>
    <%= submit_tag t(:search) %>
  <% end %>
</fieldset>



<table class="table table-striped">
  <caption> <%= t(:all_products) %> </caption>
  <%= render :partial => "/products/products_table", :locals => {:products => @products} %>
</table>



<div class="pagination_footer">
  <%= will_paginate @products, :param_name => :products_page %>
  <%= render :partial => "/shared/results_per_page" %>
</div>



<script type="text/javascript">
  var do_not_check_for_changes = true;
</script>
