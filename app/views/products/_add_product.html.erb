<% unless products.blank? %>

  <a class="btn btn-small" data-toggle="modal" data-target="#<%= form_name %>" href="#">
    <i class="icon-plus"></i>
    <%= t(:add) + t(title) %>
  </a>
  
  
  <div class="modal hide fade" id="<%= form_name %>">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h4> <%= t(:add) + t(title) %> </h4>
    </div>
    <%= fields_for form_name do |form|%>
      <div class="modal-body form-inline">
        <%= form.label :product_id, t(:name) %>
        <%= form.select(:product_id, options_from_collection_for_select(
                        products, :id, :name),
                        {:include_blank => t(:select) + t(title)}, 
                        {:class => "autocomplete large-select"}) %> 
      </div>
      <div class="modal-footer">
        <a class="btn" data-dismiss="modal" aria-hidden="true"> <%= t(:cancel) %> </a>
        <%= form.submit t(:add), :class => "btn btn-success submission" %>
      </div>
    <% end %>
  </div>
  
<% end %>