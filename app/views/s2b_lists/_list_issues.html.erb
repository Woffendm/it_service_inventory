<td> </td>

<td>
  <%= link_to issue.id, :controller => 'issues', :action => 'show', :id => issue.id %>
</td>

<td>
  <% if @priority_use_default && issue.priority_id %>
    <%= issue.priority.name %>
  <% elsif issue.get_custom_value(@priority_custom_field) %>
    <%= issue.get_custom_value(@priority_custom_field) %>
  <% end %>
</td>

<td>
  <%= issue.status %>
</td>

<% unless @sprint_use_default %>
  <td>
    <%= link_to issue.project.name.truncate(30), :controller => 'projects', :action => 'show', 
        :id => issue.project_id %>
  </td>
<% end %>

<td>
  <%= link_to issue.subject.truncate(100), :controller => 'issues', :action => 'show', 
      :id => issue.id %>
</td>

<% if issue.assigned_to %>
  <td>
    <%= link_to issue.assigned_to, :controller => 'users', :action => 'show', 
        :id => issue.assigned_to.id %>
  </td>
<% else %>
  <td></td>
<% end %>

<% unless @assignee_use_default || issue.get_custom_value(@assignee_custom_field).blank? %>
  <% user = User.find(issue.get_custom_value(@assignee_custom_field)) %>
  <% unless user.blank? %>
    <td>
      <%= link_to user.name, user_path(user.id) %>
    </td>
  <% end %>
<% end %>

<td class="estimated_hours_<%= index %>">
  <%= issue.estimated_hours %>
</td>

<% if @show_progress_bars %>
  <td>
    <div class="progressbar" value="<%= issue.done_ratio %>" id="<%= issue.id %>"></div>
  </td>
<% end %>
