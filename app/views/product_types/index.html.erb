<%= render :partial => "/shared/app_settings_tabs" %>



<%= render  :partial => "/product_types/new_product_type", 
            :locals => {:@new_product_type => @new_product_type} %>



<h3>
  <%= t(:product_types) %>
  <a class="modal_trigger" href="#">
    <i class="icon-plus"></i>
    <%= "#{t(:new)} #{t(:product_type)}" %>
  </a>
</h3>



<% if @product_types.blank? %>
  <p>
    <%= t(:nothing_to_display) %>
  </p>
<% else %>
  <table class="table table-striped">
    <thead>
      <th> <%= t(:title) %> </th>
      <th> </th>
    </thead>
    <tbody>
      <% @product_types.each_with_index do |product_type, index| %>
        <tr>
          <td> 
            <%= link_to "#{content_tag :em, '', :class => ''}
                         #{product_type.name}".html_safe, "#", :class => "modal_trigger_2" %>
            <%= render  :partial => "/product_types/edit_product_type", 
                        :locals => {:product_type => product_type, :index => index } %>
          </td>
          <td> 
            <%= link_to t(:delete), product_type_path(product_type.id), :method => :delete, 
                        :confirm => t(:confirm_deletion) %>
          </td>
        </tr>  
      <% end %>
    </tbody>
  </table>
<% end %>

