<a class="btn btn-small" data-toggle="modal" data-target="#modal-content" href="#">
  <i class="icon-plus"></i>
  <%= "#{t(:new)} #{t(:product_type)}" %>
</a>



<div class="modal hide fade" id="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h4> <%= "#{t(:new)} #{t(:product_type)}" %> </h4>
  </div>
  <%= form_for new_product_type do |form| %>
    <div class="modal-body form-inline">
      <%= form.label :name, t(:name) %>
      <%= form.text_field :name %>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <%= form.submit  t(:create), :class => "btn btn-success" %>
    </div>
  <% end %>
</div>