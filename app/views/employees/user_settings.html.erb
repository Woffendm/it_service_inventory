<h2> <%= t(:user_settings) %> </h2>


<%= link_to t(:my_edit_page), edit_employee_path(@current_user.id) %>


<%= form_tag("update_settings", :method => "post", :class => "prevent_double_submit form-horizontal") do %>
  <div class="light-border">
    <div class="control-group">
      <span class="control-label">
        <%= label_tag t(:preferred_language) %>
      </span>
      <span class="controls">
        <%= select(:employee, :preferred_language, [["English", "en"], ["EspaÃ±ol", "es"]],
                     :selected => @current_user.preferred_language) %>
        <span class="tooltip_trigger information" title="<%= t(:preferred_language_info) %>" >    
          &nbsp; 
        </span>
      </span>
    </div>
    <div class="control-group">
      <span class="control-label">
        <%= label_tag t(:new_user_reminder) %>
      </span>
      <span class="controls">
        <%= select(:employee, :new_user_reminder, [[t(:automatic), true], [t(:disabled), false]],
                     :selected => @current_user.new_user_reminder) %>
        <span class="tooltip_trigger information" title="
           <ul>
            <li class='tooltip_li'>
              <%= t(:new_user_reminder_info_0) %> 
            </li>
            <li class='tooltip_li'>
              <%= t(:new_user_reminder_info_1) %>
            </li>
          </ul>"> 
          &nbsp; 
        </span>
      </span>
    </div>
    <div class="control-group">
      <div class="control-label">
        <%= submit_tag  t(:save_changes) %>
      </div>
    </div>
  </div>
<% end %>