
<table class="list issues"><caption> Search Results</caption>
	<thead>
		<th>Name</th>
		<th>Services</th>
		<th>Allocations</th>
	</thead>
	<tbody>
		<% @employee.employee_allocations.each do |employee_allocation| %>
			<tr>
				<% if employee_allocation == @employee.employee_allocations.first %>
					<td> 
						<% if can? :update, @employee %>
							<%= link_to @employee.full_name , edit_employee_path(@employee.id) %> 
						<% else %>
							<%= @employee.full_name %>
						<% end %> 
					</td>
				<% else %>
					<td> </td>
				<% end %>
				<td> <%= employee_allocation.service.name %> </td>
		  	<td> <%= employee_allocation.allocation %> </td>
			</tr>
		<% end %>
	</tbody>
</table>
